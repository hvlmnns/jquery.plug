animspeed = .5s 
snap      = cubic-bezier(.2,1,.5,1)
accent    = #2C86C4
fontcolor = #333
bodybg    = #F4F3F1

vendor(style,property,middle = \ )
  if type(property) is 'strikeng'
    property = unquote(property)
  -webkit-{style} middle property
  -moz-{style}    middle property
  -ms-{style}     middle property
  -o-{style}      middle property
  {style}         middle property

transform(val = none)
  vendor(transform,val)

transition(val = none)
  vendor(transition-property,val)
  vendor(transition-duration,animspeed)
  vendor(transition-timing-function,snap)

animate(name)
  vendor(animation, animspeed snap, name)

@import url('http://fonts.googleapis.com/css?family=Roboto:400,500,700')

body
  background  bodybg
  font-family 'Roboto', sans-serif
  color       fontcolor
*
  box-sizing border-box
hr 
  border-color accent
  border-style solid
  border-width 2px
  width 20%
  margin 10px 0
  margin-bottom 40px

main
  width 60%
  margin 0 auto

header,#head
  margin-bottom 60px
  h1,h3
    width       50%
    display     inline-block
    float       left
    line-height 50px
  h3
    text-align right
h2
  margin-top    60px

.clear
  &:after
    content    ''
    clear      both
    display    block
    visibility hidden
    height     0px


a
  color           fontcolor
  text-decoration none
  position        relative
  transition(all)
  &:hover,&:active,&:focus,&.active
    color accent
  &.big
    color accent
    &:hover,&:active,&:focus,&.active
      color fontcolor

p
  width      50%
  text-align justify
em
  color         accent
  font-style    unset

pre
  display          block
  white-space      pre-wrap
  word-break       break-all
  word-wrap        break-word
  border-radius    4px
  width            100%
  position         relative
  display          block
  text-align       left
  background-color darken(bodybg,5%)
  padding          20px
  overflow         auto


@keyframes log
  from
    top 100px
    opacity 0
  to
    top 0
    opacity 1
#logger
  position fixed
  bottom   0px
  width    100%
  background-color darken(bodybg,5%)
  .log
    position relative
    animate(log)

